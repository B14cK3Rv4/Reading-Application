<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/blue1_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Book"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/blue1"/>

            <ImageView
                android:id="@+id/updateImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/upload" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateTitle"
                android:background="@drawable/blue1_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter title name"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/blue1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateDesc"
                android:background="@drawable/blue1_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter description"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/blue1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateLang"
                android:background="@drawable/blue1_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter language"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/blue1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:id="@+id/updateStory"
                android:background="@drawable/blue1_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Write your story here..."
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/blue1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Upload Media"
                android:id="@+id/updateMedia"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>

            <VideoView
                android:id="@+id/videoViewUpdate"
                android:layout_width="400dp"
                android:layout_height="180dp"
                android:backgroundTint="@android:color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layoutDirection="locale"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save Media"
                android:id="@+id/saveMediaButton2"
                android:textSize="18sp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                app:cornerRadius = "20dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Finish Book"
                android:id="@+id/updateButton"
                android:textSize="18sp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="40dp"
                app:cornerRadius = "20dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>